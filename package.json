{
	"name": "task-mgmt-app",
	"version": "1.0.0",
	"description": "REST API application for the management of tasks.",
	"main": "index.js",
	"scripts": {
		"build": "rm -rf dist && tsc",
		"start": "node ./dist/app.js",
		"dev": "ts-node ./src/app.ts",
		"watch": "nodemon ./src/app.ts",
		"lint": "prettier --loglevel error -w -u 'src/**/*.ts' && eslint --fix --ext .ts src/",
		"clean": "rm -rf node_modules dist package-lock.json",
		"test": "echo \"Error: no test specified\" && exit 1",
		"typeorm": "typeorm-ts-node-commonjs",
		"up": "docker compose -f docker-compose.yaml up --wait",
		"down": "docker compose -f docker-compose.yaml down --remove-orphans"
	},
	"repository": {
		"type": "git",
		"url": "github.com/michalmokros/task-mgmt-app"
	},
	"author": "michalmokros",
	"license": "ISC",
	"devDependencies": {
		"@types/express": "^4.17.14",
		"@types/jsonwebtoken": "^9.0.0",
		"@types/node": "^18.11.11",
		"@types/pg": "^8.6.5",
		"@typescript-eslint/eslint-plugin": "^5.45.1",
		"@typescript-eslint/parser": "^5.45.1",
		"eslint": "^8.29.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-typescript": "^3.5.2",
		"eslint-plugin-import": "^2.26.0",
		"nodemon": "^2.0.20",
		"prettier": "^2.8.0",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.3"
	},
	"dependencies": {
		"dotenv": "^16.0.3",
		"express": "^5.0.0-beta.1",
		"http-status-codes": "^2.2.0",
		"joi": "^17.7.0",
		"jsonwebtoken": "^9.0.0",
		"node": "^19.2.0",
		"pg": "^8.8.0",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.3.11"
	}
}
